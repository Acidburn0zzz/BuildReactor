{
	"name": "BuildReactor",
	"version": "0.3.1",
	"manifest_version": 2,
	"description": "Google Chrome extension that shows notifications for CI server events",
	"browser_action": {
		"default_title": "BuildReactor notifications",
		"default_icon": "img/icon-19.png"
	},
	"icons": {
		"128": "img/icon-128.png",
		"48": "img/icon-48.png"
	},
	"background": {
		"scripts": [ "lib/requirejs/require.min.js", "src/main.js" ]
	},
	"options_page": "options.html",
	"homepage_url": "https://github.com/AdamNowotny/BuildReactor",
	"offline_enabled": false,
	"permissions": [ "http://*/*", "https://*/*", "notifications", "cookies" ],
	"web_accessible_resources": [
		"src/bamboo/icon.png",
		"src/bamboo/logo.png",
		"src/cctray/icon.png",
		"src/cctray/logo.png",
		"src/cruisecontrol/icon.png",
		"src/cruisecontrol/logo.png",
		"src/cruisecontrol.net/icon.png",
		"src/cruisecontrol.net/logo.png",
		"src/cruisecontrol.rb/icon.png",
		"src/cruisecontrol.rb/logo.png",
		"src/go/icon.png",
		"src/go/logo.png",
		"src/jenkins/icon.png",
		"src/jenkins/logo.png",
		"src/teamcity/icon.png",
		"src/teamcity/logo.png"
	]
}
