{
	"name": "BuildReactor",
	"version": "0.7.5",
	"manifest_version": 2,
	"description": "Developer notifications and dashboard",
	"icons": {
		"16": "src/img/icon-16.png",
		"48": "src/img/icon-48.png",
		"128": "src/img/icon-128.png"
	},
	"browser_action": {
		"default_title": "BuildReactor",
		"default_icon": "src/img/icon-19.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [ "bower_components/requirejs/require.js", "src/main.js" ]
	},
	"homepage_url": "https://github.com/AdamNowotny/BuildReactor",
	"offline_enabled": false,
	"options_page": "options.html",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"notifications",
		"cookies",
		"tabs"
	],
	"web_accessible_resources": [
		"src/services/bamboo/icon.png",
		"src/services/bamboo/logo.png",
		"src/services/buildbot/icon.png",
		"src/services/buildbot/logo.png",
		"src/services/cctray/icon.png",
		"src/services/cctray/logo.png",
		"src/services/cruisecontrol/icon.png",
		"src/services/cruisecontrol/logo.png",
		"src/services/cruisecontrol.net/icon.png",
		"src/services/cruisecontrol.net/logo.png",
		"src/services/cruisecontrol.rb/icon.png",
		"src/services/cruisecontrol.rb/logo.png",
		"src/services/go/icon.png",
		"src/services/go/logo.png",
		"src/services/jenkins/icon.png",
		"src/services/jenkins/logo.png",
		"src/services/snap/icon.png",
		"src/services/snap/logo.png",
		"src/services/teamcity/icon.png",
		"src/services/teamcity/logo.png",
		"src/services/travis/icon.png",
		"src/services/travis/logo.png"
	]
}
