{
	"name": "BuildReactor",
	"version": "0.3.0",
	"manifest_version": 2,
	"description": "Google Chrome extension that shows notifications for CI server events",
	"browser_action": {
		"default_title": "BuildReactor notifications",
		"default_icon": "img/icon-19.png"
	},
	"icons": {
		"128": "img/icon-128.png",
		"48": "img/icon-48.png"
	},
	"background": {
		"scripts": [ "lib/requirejs/require.min.js", "src/main.js" ]
	},
	"options_page": "options.html",
	"homepage_url": "https://github.com/AdamNowotny/BuildReactor",
	"offline_enabled": false,
	"permissions": [ "http://*/*", "https://*/*", "notifications", "cookies" ],
	"web_accessible_resources": [
		"src/cctray/options.html",
		"src/cctray/icon.png",
		"src/bamboo/options.html",
		"src/bamboo/icon.png"
	]
}
